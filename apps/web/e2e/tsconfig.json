{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["ES2020", "dom", "dom.iterable"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noUncheckedIndexedAccess": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["../*"],
            "@/components/*": ["../components/*"],
            "@/lib/*": ["../lib/*"],
            "@/app/*": ["../app/*"],
            "@/public/*": ["../public/*"]
        },
        "types": [
            "node",
            "@playwright/test"
        ]
    },
    "include": [
        "**/*.ts",
        "**/*.tsx", 
        "../next-env.d.ts"
    ],
    "exclude": [
        "node_modules",
        "../node_modules"
    ]
}