{
    "extends": "@repo/typescript-config",
    "compilerOptions": {
        "rootDir": ".",
        "outDir": "dist",
        "lib": ["dom", "dom.iterable", "esnext"],
        "module": "ESNext",
        "target": "ES2020",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "paths": {
            "#components/*": ["./components/*"],
            "#hooks/*": ["./hooks/*"],
            "#context/*": ["./context/*"],
            "#store/*": ["./store/*"]
        }
    },
    "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"],
    "exclude": ["node_modules"]
}
