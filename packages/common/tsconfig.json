{
    "extends": "@repo/typescript-config",
    "compilerOptions": {
        "baseUrl": ".",
        "jsx": "react-jsx",
        "paths": {
            "#components/*": ["./components/*"],
            "#hooks/*": ["./hooks/*"],
            "#context/*": ["./context/*"],
            "#store/*": ["./store/*"]
        }
    },
    "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"],
    "exclude": ["node_modules"]
}
